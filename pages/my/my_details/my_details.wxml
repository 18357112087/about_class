<view class="content">
<view class='list list_val white' bindtap='user_val'>
  <text class='title'>头像</text>
  <image src='http://yueke.dazhu-ltd.cn/public/uploads{{userInfo.user_portrait}}' class='val_logo'></image>
</view>
  <view class='list' bindtap='user_name'>
    <text class='title'>昵称</text>
    <text class='mintitle'>{{userInfo.user_nickname}}</text>
  </view>
  <view class='list white' bindtap='bind_phone'>
    <text class='title'>手机号</text>
    <text class='mintitle'>{{userInfo.user_phone}}</text>
  </view>
  <picker range="{{sex_list}}" range-key="label" bindchange='bindchange'>
      <view class='list' >
    <text class='title'>性别</text>
    <text class='mintitle'>{{sex_list[sex_index].label}}</text>
  </view>
  </picker>

  <view class='list white' bindtap='user_age'>
    <text class='title'>年龄</text>
    <text class='mintitle'>请选择</text>
  </view>
  <view class='list' bindtap='to_adder'>
    <text class='title'>我的地址</text>
    <text class='mintitle'>{{userInfo.user_address}}</text>
  </view>
</view>

<view class='out_group' bindtap='out'>保存</view>