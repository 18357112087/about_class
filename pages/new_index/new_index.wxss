.tab_wrap {
  width: 680rpx;
  height: 188rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.tab_item{
  width: 100rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.icon-xuesheng,.icon-jiaolian1{
  font-size: 60rpx;
  color: rgba(96, 234, 243, 1);
}
.tab_title{
  font-size:28rpx;
font-family:PingFang-SC-Bold;
font-weight:bold;
color:rgba(96,234,243,1);
margin-top: 20rpx;
}

.content_wrap {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0rpx 35rpx;
}

.content_title {
  width: 100%;
  height: 100rpx;
  font-size: 34rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(44, 44, 44, 1);
}

.content_list {
  width: 100%;
  height: auto;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.content_img {
  width: 200rpx;
  height: 200rpx;
  background: rgba(41, 49, 80, 1);
  border-radius: 10rpx;
}

.content_res {
  width: 400rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;   
}

.content_title {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(44, 44, 44, 1);
}

.content_date {
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(118, 124, 143, 1);
  text-align: right;
}
