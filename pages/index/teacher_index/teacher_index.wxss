.content {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 32rpx;
}

.user_info {
  width: 100%;
  height: 144rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info_res {
  width: 50%;
  height: auto;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}

.info_top {
  display: flex;
  align-items: center;
}

.info_val {
  width: 144rpx;
  height: 144rpx;
}

.res_name {
  color: rgba(44, 44, 44, 1);
  font-size: 40rpx;
}

.res_rz {
  width: 102rpx;
  height: 32rpx;
  margin-left: 14rpx;
}

.info_mintitle {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  margin-top: 6rpx;
}

.class {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  overflow: hidden;
}

.class_title {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid rgba(96, 234, 243, 1);
}
.class_mintitle{
  font-size: 26rpx;
  color: rgba(255, 153, 73, 1);
  margin-left: auto;
}
.icon-arr-right-red{
  font-size: 26rpx;
  color: rgba(255, 153, 73, 1);
  margin-left: 14rpx;
  line-height: 26rpx;
}
.class_logo {
  width: 52rpx;
  height: 48rpx;
}

.class_title_name {
  font-size: 32rpx;
  color: rgba(96, 234, 243, 1);
  margin-left: 12rpx;
}
.class_kind{
  padding: 30rpx 0rpx;
}
.kind_list {
  width: 144rpx;
  height: 64rpx;
  border: 2rpx solid rgba(96, 234, 243, 1);
  border-radius: 4rpx;
  font-size: 26rpx;
  color: rgba(44, 44, 44, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
  margin-right: 16rpx;
  float: left;
}
.evaluate_list{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 30rpx 0rpx;
  display: flex;
  flex-direction: column;
  border-bottom:2rpx solid rgba(96, 234, 243, 1); 
}
.list_head{
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
}
.list_head_val{
  width: 32rpx;
  height: 32rpx;
}
.list_head_name{
  font-size: 24rpx;
  color: rgba(44, 44, 44, 1);
  margin-left: 4rpx;
}
.icon-xingxing{
  font-size: 16rpx;
  color: rgba(255, 153, 73, 1);
  margin-right: 8rpx;
}
.ml{
  margin-left: auto;
}
.list_head_time{
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  margin-left: 5rpx;
}
.list_res{
  color: rgba(153, 153, 153, 1);
  font-size: 26rpx;
  margin-top: 16rpx;
}