/* pages/ordel/ordel.wxss */

page {
  width: 100%;
  height: 100%;
  /* background-color: rgba(223, 243, 250, 1); */
   background-color: rgba(234, 234, 234, 1);
  position: relative;
}

.tabWrap {
  position: fixed;
  top: 0;
  width: 100%;
  height: 96rpx;
  /* background-color: rgba(234, 234, 234, 1); */
  background-color:rgba(223, 243, 250, 1);

  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
  z-index: 10;
}

.tabItem {
  width: 50%;
  height: 100%;
  position: relative;
  text-align: center;
  line-height: 96rpx;
  font-size: 26rpx;
  color: rgba(96, 234, 243, 1);
}

.tabActive::after {
  position: absolute;
  content: '';
  bottom: 20rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 80rpx;
  height: 4rpx;
  background: -webkit-gradient(linear, left top, right top, from(rgba(104, 227, 245, 1)), to(rgba(123, 235, 221, 1)));
  background: linear-gradient(90deg, rgba(104, 227, 245, 1) 0%, rgba(123, 235, 221, 1) 100%);
}

.content {
  width: 100%;
  height: 100%;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 96rpx 24rpx 0rpx 24rpx;
}

.list {
  width: 100%;
  /* height: 472rpx; */
  background-color: rgba(255, 255, 255, 1);
  margin-top: 32rpx;
  border-radius: 8rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 42rpx 24rpx;
}

.list_head {
  width: 100%;
  height: 130rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.head_portrait {
  width: 94rpx;
  height: 94rpx;
  border-radius: 50%;
}

.head_name {
  font-size: 32rpx;
  color: rgba(44, 44, 44, 1);
  margin-left: 16rpx;
  font-weight: 500;

}

.head_time {
  font-size: 26rpx;
  color: rgba(44, 44, 44, 1);
  /* margin-left: 20rpx; */
  text-indent: 20rpx;
  position: relative;
}

.head_time::before {
  content: '';
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 1);
  top: 18rpx;
  left: 8rpx;
}

.head_ordel_money {
  font-size: 26rpx;
  color: rgba(44, 44, 44, 1);
  margin-left: auto;
}

.classInfo {
  width: 100%;
  height: auto;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 20rpx 50rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -ms-flex-direction: column;
  flex-direction: column;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
}

.class_group {
  width: 100%;
  height: 100rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
}

.line {
  width: 80rpx;
  height: 2rpx;
  margin: 0 25rpx;
  border-bottom: 2rpx dashed rgba(96, 234, 243, 1);
}

.class_name,
.class_time {
  width: 200rpx;
  height: 100%;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -ms-flex-direction: column;
  flex-direction: column;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
  /* background-color: red; */
}

.title {
  font-size: 40rpx;
  color: rgba(96, 234, 243, 1);
}

.min_title {
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
}

.ordert_type {
  margin-top: 26rpx;
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
}

.scope_group {
  width: 100%;
  height: 50rpx;
  margin-top: 28rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: end;
  -ms-flex-pack: end;
  justify-content: flex-end;
}

.scope_normel_button {
  width: 160rpx;
  height: 48rpx;
  border: 1rpx solid rgba(96, 234, 243, 1);
  text-align: center;
  line-height: 48rpx;
  font-size: 28rpx;
  color: rgba(96, 234, 243, 1);
  border-radius: 8rpx;
  margin-right: 8rpx;
}

.button_active {
  color: rgba(255, 255, 255, 1);
  background-color: rgba(96, 234, 243, 1);
  margin-right: 0;
  /* margin-left: auto; */
}